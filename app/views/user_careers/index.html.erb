<h1>Listing user_careers</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Career</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_careers.each do |user_career| %>
      <tr>
        <td><%= user_career.user.name %></td>
        <td><%= user_career.career %></td>
        <td><%= link_to 'Show', user_career %></td>
        <td><%= link_to 'Edit', edit_user_career_path(user_career) %></td>
        <td><%= link_to 'Destroy', user_career, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

